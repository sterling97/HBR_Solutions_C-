@model IEnumerable<Web_service.PRODUCT>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="box-search">

    <div class="input-group input-group-lg">
        <input type="text" onkeyup="search(this)" class="form-control" placeholder="SEARCH" aria-describedby="sizing-addon1">
    </div>

    <div id="result-search">
        <ul id="element-each">

        </ul>
    </div>

</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@Html.AntiForgeryToken()



<table class="table">
    <tr>
        <th>
            IMAGE
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NAME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DESCRIPTION)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CREATED)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CATEGORY.NAME)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img width="100" height="50" src="@item.URL_IMG" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRIPTION)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CREATED)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CATEGORY.NAME)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                <div class="btn-group" role="group">
                    <button type="button" onclick="del(@item.ID)" class="btn btn-danger">DELETE</button>
                </div>
            </td>
        </tr>
    }

</table>




<script>

    var timeout = null;

    function search(el) {
        var val = $(el).val();

        clearTimeout(timeout);

        timeout = setTimeout(() => {

            $.ajax({
                type: "POST",
                url: "search",
                data: {
                    __RequestVerificationToken: $("input[name='__RequestVerificationToken']").val(),
                    KEYWORD: val
                },
                success: (data) => {

                   /* if (data.length > 0) {
                        window.location.reload(true);
                    } else {
                        alert("Error!");
                    }
                    */

                    var box = $("#result-search");
                    var elem_each = $("#element-each").html("");

                    data.forEach((itm) => {

                        box.append(
                            elem_each
                                .append(
                                    $("<li>").html(itm.NAME).data("id", itm.ID).click(RedirectSearch))
                        )
                       // console.log(itm);
                    })
                   


                    console.log(data);

                }
            });

        }, 500);

        console.log(val);
    }

    function RedirectSearch() {

        var value = $(this).data("id");

        window.location = `/Products/Details/${value}`;
       // alert(value);
    }

    function del(id) {

        if (confirm("Are you sure you want to delete this information?")) {

            $.ajax({
                type: "POST",
                url: "products/Delete",
                data: {
                    __RequestVerificationToken: $("input[name='__RequestVerificationToken']").val(),
                    ID: id
                },
                success: (data) => {

                    if (data.length > 0) {
                        window.location.reload(true);
                    } else {
                        alert("Error!");
                    }

                    console.log(data);

                }
            });

        }

    }

</script>